<body bgcolor="#99CCCC" text="#000000" vlink="#0066FF">

<p align= right>
  <font size= "5" color ="#006600">Hello <%= current_customer.name%></font>
  <%= link_to 'Home', welcome_index_path %>
  <%= link_to 'Logout', session_path(session[:customer_id]),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</p>
<HR SIZE="7" WIDTH="100%" color="#CC6699">


<h2>List of Customers</h2>

<style>
table,th {text-align: left;}

th { background-color: black; color: white; }

</style>

<table style= "width:50%" >
  <tr>
    <th>Name</th>

    <th>Phone Number</th>
  </tr>

  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.name %></td>

      <td><%= customer.phone_number %></td>

      <td><%= link_to 'Show-details', customer_path(customer) %></td>
      <td><%=
                link_to 'Edit', edit_customer_path(customer)

      %></td>
      <td><%= link_to 'Destroy', customer_path(customer),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%=   if is_admin?
        link_to 'Go to Products Details', products_path
      end
%>
