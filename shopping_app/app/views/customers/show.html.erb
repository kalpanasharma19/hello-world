<body bgcolor="#99CCCC" text="#FF33OO" vlink="#0066FF">
<p align= right>
  <font size= "5" color ="#006600">Hello <%= current_customer.name%></font>
  <%= link_to 'Home', controller: 'welcome' %>
  <%= link_to 'Logout', session_path(session[:customer_id]),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</p>
<HR SIZE="7" WIDTH="100%" color="#CC6699">


<p>
  <strong>Customer Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @customer.phone_number %>
</p>

<h4>Delivery Addresses:</h4>
<%= render @customer.delivery_addresses %>

<h4> Add a delivery address: </h4>
<%= render 'delivery_addresses/form' %>

<%= link_to 'Edit', edit_customer_path(@customer) %>
<%= if is_admin?
      link_to 'Back', customers_path
    else
      link_to 'Back', products_path
    end %>

