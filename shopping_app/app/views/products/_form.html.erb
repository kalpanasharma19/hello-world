<%= form_with model: @product, local: true  do |form| %>



  <p>
    <%= form.label :Product %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :Description %><br>
    <%= form.text_area :description %>
  </p>

<p>
    <%= form.label :Price %><br>
    <%= form.text_field :price %>
  </p>

  <p>
    <%= form.submit  %>
  </p>

<% end %>
